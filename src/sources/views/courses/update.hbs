<div class="mt-4">
  <h3>Sửa khóa học</h3>
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">TÊN KHÓA HỌC</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{course.name}}"
      />
    </div>
    <div class="form-group">
      <label for="description">MÔ TẢ</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      >{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="image">IMAGE LINK</label>
      <input
        type="text"
        class="form-control"
        id="image"
        name="image"
        value="{{course.image}}"
      />
    </div>
    <div class="form-group">
      <label for="videoID">VIDEO</label>
      <input
        type="text"
        class="form-control"
        id="videoID"
        name="videoID"
        value="{{course.videoID}}"
      />
    </div>
    <button type="submit" class="btn btn-primary">SỬA KHÓA HỌC</button>
  </form>
</div>